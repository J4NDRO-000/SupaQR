# Puerto de la aplicación
PORT=3000

# URL base para generar enlaces (importante para producción)
BASE_URL=http://localhost:3000

# Entorno de ejecución
NODE_ENV=development

# Configuración de base de datos (opcional, para PostgreSQL)
# DB_TYPE=postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=qr_tracker
# DB_USER=postgres
# DB_PASS=tu_password

# Configuración de archivos
MAX_FILE_SIZE=52428800  # 50MB en bytes
MAX_FILES_PER_UPLOAD=20

# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutos
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de seguridad (opcional)
JWT_SECRET=tu_jwt_secret_muy_seguro
SESSION_SECRET=tu_session_secret

# Configuración de email (para notificaciones futuras)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_app_password

# Webhook URL (para notificaciones externas)
WEBHOOK_URL=https://tu-webhook.com/notify

# Configuración de analytics externos (opcional)
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X